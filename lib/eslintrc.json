{
  "rules": {
    "array-bracket-spacing": 2,
    "comma-dangle": 2,
    "comma-style": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "eol-last": 2,
    "indent": [2, 4],
    "key-spacing": 2,
    "new-cap": 2,
    "no-continue": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 2,
    "no-with": 2,
    "vars-on-top": 2,
    "wrap-iife": 2
  }
}
